<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <center>
    <h2>We currently have 123,456 jobs posts but only 12,345 applicants</h2>
  </center>

<div class="row">
  <div class="col s4">
    This is where the search bar goes
  </div>

  <div class="col s8">
    <% @gigs.each do |gig| %>
      <div class="card horizontal">
        <div class="card-stacked">
          <div class="card-content">
            <span class="card-title"><%= link_to gig.name, gig %></span>
            <p><%= gig.name %></p>
            <p><%= gig.description %></p>
          </div>
          <div class="card-action">
            <p><%= gig.location %>, <%= gig.created_at.strftime("%b %d, %Y") %>
          </div>
        </div>
      </div>
    <% end %>
    <center><%= paginate @gigs %></center>
    </div>
  </div>
</div>